@model IEnumerable<Database.Ware>

<label class="display-6 ">Subgroups</label>
<hr>



<nav class="navbar navbar-expand-sm m-2 border border-1 border-dark-subtle rounded  rounded-2 ">
    <b class="display-6">Your Path : </b> <span class="display-6 path-item">
        <span class="display-6 path-item" onclick="BackToHome()"> Home</span>
        <span class="display-6 "> &gt; </span>
        <span class="display-6 path-item"> Subgroups</span>
</nav>

<div class="text-center m-3">
    <hr>
</div>

<div class="row row-cols-1 row-cols-md-3 g-4">

    @foreach (var item in Model.OrderByDescending(c => c.Count > 0).OrderByDescending(c => c.DateOfInsert))
    {
        <div class="col">
            <div class="card text-left">
                <img class="card-img-top" src="~/Images/@item.WareGroupID--@item.WareSubGroupID--@item.Name/@item.Image"
                    alt="">
                <div class="card-body">
                    <h4 class="card-title">@item.Name</h4>
                    <p class="card-text">@item.Description</p>
                    @if (item.Count > 1)
                    {
                        <p class="card-text">Price : @item.Price$</p>
                        <button class="btn btn-success  btn-addbasket  float-end m-1 " onclick="AddToBasket('@item.WareID')">Add
                            to
                            basket</button>
                    }
                    else
                    {
                        <span class="text-danger display-6" style="font-size: 1.5em;">Inventory of this ware to be finished
                            !</span>

                    }
                    <button class="btn btn-dark  btn-details float-end m-1 " onclick="OpenWarePage('@item.WareID')">Show
                        details</button>
                </div>
            </div>
        </div>
    }

</div>
<div class="container-fluid ">
    <div class="row">
        <div class="row text-center justify-content-center ">
        </div>
    </div>
    <button class="btn btn-success btn-home rounded rounded-5 " onclick="BackToHome()"><i class="bi bi-house display-6 "
            data-bs-toggle="tooltip" data-bs-placement="top" title="Go to Homepage"></i></button>
</div>
